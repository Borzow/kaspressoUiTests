<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fokus.Theme.Core" parent="Fokus.Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/color_status_background</item>
        <item name="android:navigationBarColor">@color/color_navigation_background</item>
    </style>

    <style name="Fokus.Theme.Core.Navigation">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/color_surface</item>
    </style>

    <style name="Fokus.Component.BottomSheet" parent="Fokus.Component.BottomSheet.Bridge">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/color_surface</item>
    </style>

</resources>