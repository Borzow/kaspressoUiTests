<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fokus.Theme.Base" parent="Fokus.Theme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color_status_background</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="Fokus.Theme.Core" parent="Fokus.Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Fokus.Theme.Core.Navigation"/>

    <style name="Fokus.Theme.Core.Editor">
        <item name="android:statusBarColor">@color/color_window_background</item>
    </style>
    <style name="Fokus.Theme.Core.Editor.Task">
        <item name="colorPrimary">@color/color_theme_task</item>
        <item name="colorPrimaryVariant">@color/color_theme_task</item>
        <item name="colorSecondary">@color/color_theme_task</item>
        <item name="colorSecondaryVariant">@color/color_theme_task</item>
    </style>
    <style name="Fokus.Theme.Core.Editor.Events">
        <item name="colorPrimary">@color/color_theme_events</item>
        <item name="colorPrimaryVariant">@color/color_theme_events</item>
        <item name="colorSecondary">@color/color_theme_events</item>
        <item name="colorSecondaryVariant">@color/color_theme_events</item>
    </style>
    <style name="Fokus.Theme.Core.Editor.Subjects">
        <item name="colorPrimary">@color/color_theme_subjects</item>
        <item name="colorPrimaryVariant">@color/color_theme_subjects</item>
        <item name="colorSecondary">@color/color_theme_subjects</item>
        <item name="colorSecondaryVariant">@color/color_theme_subjects</item>
    </style>

</resources>