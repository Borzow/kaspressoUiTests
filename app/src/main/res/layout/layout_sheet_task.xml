<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/bottom_sheet_padding">

    <TextView
        android:id="@+id/menuTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_create_task"
        android:textAppearance="@style/Fokus.TextAppearance.BottomSheet.Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textInputLayout"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/field_task_name"
        app:layout_constraintTop_toBottomOf="@id/menuTitleView"
        style="@style/Fokus.Widget.TextInput.Layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/taskNameTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textAppearance="@style/Fokus.TextAppearance.Title">

            <requestFocus/>

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout">

        <com.google.android.material.chip.Chip
            android:id="@+id/dueDateChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/field_due_date"
            app:chipIcon="@drawable/ic_hero_clock_24"
            app:chipIconTint="@color/color_on_surface"
            app:iconStartPadding="8dp" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expandButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/button_expand"
        app:icon="@drawable/ic_hero_chevron_up_24"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Fokus.Widget.Button.Text.Dialog"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/button_save"
        app:icon="@drawable/ic_hero_check_24"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Fokus.Widget.Button"/>

</androidx.constraintlayout.widget.ConstraintLayout>